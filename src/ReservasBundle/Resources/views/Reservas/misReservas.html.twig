    <div class="card">
        <div class="card-header alert-info">Mis Reservas</div>
        <div class="card-body">
            <div class="text-center"
                 ng-if="resultMisReservas.length == 0"> No se encuentran reservas con los datos especificados</div>
            <table class="table table-striped table-hover"
                   ng-if="resultMisReservas.length > 0">
                <thead>
                    <tr>
                        <th>Estado</th>
                        <th>Llegada</th>
                        <th>Salida</th>
                        <th>Tipo Habitación</th>
                        <th>Tipo Pensión</th>
                        <th>Precio</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat-start="misreservas in resultMisReservas">
                        <td>
                            [[ misreservas.estado ]]
                        </td>
                        <td>
                            [[ misreservas.llegada.date | date: 'dd-MM-yyyy' ]]
                        </td>
                        <td>
                            [[ misreservas.salida.date | date: 'dd-MM-yyyy' ]]
                        </td>
                        <th class="">
                            [[ misreservas.tipoHabitacion ]]
                        </th>
                        <td class="text-center">
                            [[ misreservas.tipoPension ]]
                        </td>
                        <td class="text-right">
                            [[ misreservas.precio ]] €
                        </td>
                        <td>
                            <button class="btn btn-info"
                                    ng-click="MostrarInfoReserva(misreservas.id)">[[ textoBotonInfo[misreservas.id] ]]</button>
                        </td>
                    </tr>
                    <tr ng-repeat-end="misreservas in resultMisReservas"
                        class="table-dark"
                        ng-if="misReservasDatos[misreservas.id] == true">
                        <td>[[ misreservas.nombre ]] [[ misreservas.apellidos ]]</td>
                        <td ng-if="formMisReservas.idreserva != null">
                            <strong>Voucher:</strong> [[ misreservas.voucher ]]</td>
                        <td><strong>E-mail:</strong> [[ misreservas.email ]]</td>
                        <td><strong>Telef:</strong> [[ misreservas.telefono ]]</td>
                        <td><strong>Ad</strong> [[ misreservas.numAdultos ]]</td>
                        <td><strong>Ni</strong> [[ misreservas.numNinos ]]</td>
                        <td><strong>Be</strong> [[ misreservas.numBebes ]]</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
